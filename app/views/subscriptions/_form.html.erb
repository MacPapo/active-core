<%= form_with(model: subscription) do |form| %>
    <% if subscription.errors.any? %>
        <div style="color: red">
            <h2><%= t('global.forms.messages.errors', count: subscription.errors.count) %></h2>
            <ul>
                <% subscription.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="row">
        <div class="col">
            <div class="mb-3">
                <%= form.label :start_date, class: 'form-label' %>
                <%= form.date_field :start_date, class: 'form-control' %>
            </div>
        </div>
        <div class="col">
            <div class="mb-3">
                <%= form.label :end_date, class: 'form-label' %>
                <%= form.date_field :end_date, class: 'form-control' %>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="mb-3">
                <%= form.label :activity_id, class: 'form-label' %>
                <%= form.collection_select :activity_id, @activities, :id, :name, {}, { class: 'form-select' } %>
            </div>
        </div>
        <div class="col">
            <div class="mb-3">
                <%= form.label :activity_plan_id, class: 'form-label' %>
                <%= form.collection_select :activity_plan_id, @activity_plans, :id, :plan, {}, { class: 'form-select' } %>
            </div>
        </div>
    </div>

    <div class="form-check mb-3">
        <%= form.check_box :open, class: 'form-check-input' %>
        <%= form.label :open, 'Open', class: 'form-check-label' %>
    </div>

    <%= form.hidden_field :user_id, value: @user.id %>
    <%= form.hidden_field :staff_id, value: current_staff.id %>

    <div class="actions">
        <%= form.submit class: 'btn btn-success w-100' %>
    </div>
<% end %>
