<%= form_with(model: subscription) do |form| %>
    <% if subscription.errors.any? %>
        <div style="color: red">
            <h2><%= t('global.forms.messages.errors', count: subscription.errors.count) %></h2>
            <ul>
                <% subscription.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div>
        <%= form.label :start_date, style: "display: block" %>
        <%= form.date_field :start_date %>
    </div>

    <div>
        <%= form.label :end_date, style: "display: block" %>
        <%= form.date_field :end_date %>
    </div>


    <div>
        <%= form.label :activity_id, style: "display: block" %>
        <%= form.collection_select :activity_id, @activities, :id, :name, prompt: "Seleziona una Attività" %>
    </div>

    <div class="my-5">
        <%= form.label :activity_plan_id %>
        <%= form.collection_select :activity_plan_id, @activity_plans, :id, :plan, prompt: "Seleziona un Piano per questa Attività" %>
    </div>

    <div>
        <%= form.label :open, 'Open', class: 'form-check-label' %>
        <%= form.check_box :open, class: 'form-check-input' %>
    </div>

    <%= form.hidden_field :user_id, value: @user.id %>
    <%= form.hidden_field :staff_id, value: current_staff.id %>

    <div>
        <%= form.submit %>
    </div>
<% end %>
