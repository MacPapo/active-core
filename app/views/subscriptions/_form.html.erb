<%= form_with(model: subscription, data: { controller: 'plan' }) do |form| %>
    <% if subscription.errors.any? %>
        <div style="color: red">
            <h2><%= pluralize(subscription.errors.count, "error") %> prohibited this subscription from being saved:</h2>

            <ul>
                <% subscription.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div>
        <%= form.label :start_date, style: "display: block" %>
        <%= form.date_field :start_date %>
    </div>

    <div>
        <%= form.label :end_date, style: "display: block" %>
        <%= form.date_field :end_date %>
    </div>


    <div>
        <%= form.label :activity_id, style: "display: block" %>
        <%= form.collection_select :activity_id, Activity.all, :id, :name, { prompt: '' }, { data: { action: "change->plan#updatePlans" } } %>
    </div>

    <div class="my-5">
        <%= form.label :activity_plan_id %>
        <%= form.collection_select :activity_plan_id, ActivityPlan.none, :id, :title, {prompt: ''}, {data: {plan_target: 'plan'}} %>
    </div>

    <div>
        <%= form.label :open, 'Open', class: 'form-check-label' %>
        <%= form.check_box :open, class: 'form-check-input' %>
    </div>

    <%= form.hidden_field :user_id %>
    <%= form.hidden_field :staff_id %>

    <div>
        <%= form.submit %>
    </div>
<% end %>
