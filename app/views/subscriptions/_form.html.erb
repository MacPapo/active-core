<%= form_with(model: subscription, data: { controller: 'activity-search-user' }) do |form| %>
    <% if subscription.errors.any? %>
        <div style="color: red">
            <h2><%= t('global.forms.messages.errors', count: subscription.errors.count) %></h2>
            <ul>
                <% subscription.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="row">
        <div class="col">
            <div class="mb-3">
                <%= form.label :start_date, class: 'form-label' %>
                <%= form.date_field :start_date, class: 'form-control' %>
            </div>
        </div>
        <div class="col">
            <div class="mb-3">
                <%= form.label :end_date, class: 'form-label' %>
                <%= form.date_field :end_date, class: 'form-control' %>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="mb-3">
            <%= form.label :activity_plan_id, class: 'form-label' %>
            <%= form.collection_select :activity_plan_id, @plans, :id, :humanize_plan, {}, { class: 'form-select' } %>
        </div>
    </div>

    <div class="container mt-4">
        <h1>Cerca Utente</h1>

        <%= text_field_tag :q, nil, data: { 'activity-search-user-target' => "input",
            'action' => "input->activity-search-user#search change->activity-search-user#selectUser" },
                           class: 'form-control',
                           list: "datalistOptions",
                           placeholder: 'Inserisci nome utente...',
                           autocomplete: "off"
        %>

        <%= form.hidden_field :user_id, data: { 'activity-search-user-target' => "hiddenUserId" } %>

        <datalist id="datalistOptions" data-activity-search-user-target="results">
        </datalist>
    </div>


    <div class="form-check mb-3">
        <%= label_tag do %>
            <%= check_box_tag(:open, class: 'form-check-input') %>
            OPEN
        <% end %>
    </div>

    <%= form.hidden_field :activity_id, value: @activity.id %>
    <%= form.hidden_field :staff_id, value: current_staff.id %>

    <div class="actions">
        <%= form.submit class: 'btn btn-success w-100' %>
    </div>
<% end %>
