<div class="card" id="<%= dom_id @subscription %>">
  <div class="card-header">
    <h1 class="card-title">
      <%= t '.title' %>
    </h1>
  </div>

  <!-- Card Body -->
  <div class="card-body">
    <%= render @subscription %>
  </div>

  <!-- Card Footer -->
  <div class="card-footer bg-light">
    <div class="d-flex justify-content-end">
      <%= link_to "Edit this subscription", edit_subscription_path(@subscription), class: 'btn btn-warning me-2' %>
      <%= button_to "Destroy this subscription", @subscription, class: 'btn btn-danger', method: :delete %>
    </div>
  </div>
</div>
