<div>
  <%= form_with url: path, method: :get, data: { turbo_frame: frame, turbo_action: 'advance', controller: 'usearch', action: 'input->usearch#submit' } do |f| %>
  <div class="row mb-3">
    <div class="col">
      <div class="form-floating">
        <%= f.text_field :name, placeholder: 'Mimmo', class: 'form-control', id: 'floatingInputName' %>
        <label for="floatingInputName"><%= User.human_attribute_name('name') %></label>
      </div>
    </div>
    <div class="col">
      <div class="form-floating">
        <%= f.text_field :surname, placeholder: 'Lucano', class: 'form-control', id: 'floatingInputSurname' %>
        <label for="floatingInputSurname"><%= User.human_attribute_name('surname') %></label>
      </div>
    </div>
    <!-- TODO translate -->
    <div class="col">
      <div class="form-floating">
        <select class="form-select" id="floatingInputDirection" name="direction" aria-label="Floating label select">
	  <option value="">Seleziona Direction</option>
	  <option value="asc">ASC</option>
	  <option value="desc">DESC</option>
	</select>

        <label for="floatingInputDirection"><%= t 'global.table.direction' %></label>
      </div>
    </div>
  </div>
  <% end %>
</div>
