<%= content_for :counter do %>
    <% count = @plans.count %>
    <p class="fs-3 fw-bold text-secondary mb-0"><%= count %></p>
    <span class="fs-6 fw-light ps-2 text-muted"><%= t('.registered', count:) %></span>
<% end %>

<%= render 'partials/container', obj: @activity, title: "#{t('.title')} #{@activity.name}" do %>
    <!-- Edit -->
    <%= link_to edit_activity_path(@activity), class: 'btn btn-warning me-2 fs-5 text-secondary' do %>
        <i class="bi bi-pencil-fill me-1"></i>
        <%= t('global.edit_button') %>
    <% end %>

    <!-- Destroy -->
    <%= button_to @activity,
                  class: 'btn btn-danger fs-5 text-secondary',
                  method: :delete,
                  data: { turbo_confirm: t('global.delete_dialog') } do %>
        <i class="bi bi-trash3-fill"></i>
        <%= t('global.delete_button') %>
    <% end %>
<% end %>
