<%= form_with model: [ product, pricing_plan], local: true do |form| %>
    <div class="grid grid-cols-2 gap-4">
        <div>
            <%= form.label :duration_type, class: "block text-sm font-medium" %>
            <%= form.select :duration_type,
                options_for_select(duration_type_options),
             { prompt: "Seleziona tipo" },
             { class: "mt-1 block w-full" } %>
        </div>

        <div>
            <%= form.label :duration_value, class: "block text-sm font-medium" %>
            <%= form.number_field :duration_value,
                min: 1,
                class: "mt-1 block w-full",
                placeholder: "Es. 1, 3, 12"
            %>
        </div>

        <div>
            <%= form.label :price, class: "block text-sm font-medium" %>
            <%= form.number_field :price, step: 0.01, class: "mt-1 block w-full" %>
        </div>
    </div>

    <div class="grid grid-cols-2 gap-4 mt-4">
        <div>
            <%= form.label :affiliated_price, "Prezzo Affiliati", class: "block text-sm font-medium" %>
            <%= form.number_field :affiliated_price,
                step: 0.01,
                min: 0,
                class: "mt-1 block w-full" %>
        </div>

        <div class="flex items-center">
            <%= form.check_box :active, class: "mr-2" %>
            <%= form.label :active, "Attivo", class: "text-sm font-medium" %>
        </div>
    </div>

    <div class="grid grid-cols-2 gap-4 mt-4">
        <div>
            <%= form.label :valid_from, "Valido da", class: "block text-sm font-medium" %>
            <%= form.date_field :valid_from, class: "mt-1 block w-full" %>
        </div>

        <div>
            <%= form.label :valid_until, "Valido fino", class: "block text-sm font-medium" %>
            <%= form.date_field :valid_until, class: "mt-1 block w-full" %>
        </div>
    </div>

    <div class="form-actions">
        <%= form.submit class: "btn btn-primary" %>
        <%= link_to "Annulla", [ product ], class: "btn btn-secondary" %>
    </div>
<% end %>
