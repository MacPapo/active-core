<%= form_with(model: staff) do |form| %>
    <% if staff.errors.any? %>
        <div style="color: red">
            <h2><%= t('global.forms.messages.errors', count: staff.errors.count) %></h2>

            <ul>
                <% staff.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div>
        <%= form.label :email, style: "display: block" %>
        <%= form.text_field :email %>
    </div>

    <div>
        <%= form.label :role, style: "display: block" %>
        <%= form.text_field :role %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>
