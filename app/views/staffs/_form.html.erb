<%= form_with(model: staff) do |form| %>
    <% if staff.errors.any? %>
        <div style="color: red">
            <h2><%= t('global.forms.messages.errors', count: staff.errors.count) %></h2>

            <ul>
                <% staff.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div>
        <%= form.label :nickname, class: 'form-label' %>
        <%= form.text_field :nickname, class: 'form-control' %>
    </div>

    <div>
        <%= form.label :password, class: 'form-label' %>
        <%= form.password_field :password, class: 'form-control' %>
    </div>

    <div>
        <%= form.label :role, class: 'form-label' %>
        <%= form.select :role, @roles, {}, { class: 'form-select' } %>
    </div>

    <div class="actions">
        <%= form.submit class: 'btn btn-success w-100' %>
    </div>
<% end %>
