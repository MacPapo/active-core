<div class="d-flex justify-content-between align-items-center mb-3">
    <p class="mb-0 fs-3 fw-semibold text-secondary">
        <%= model_to_string(Staff, 2) %>
    </p>

    <div class="d-flex align-items-center">
        <% count = Staff.count %>
        <p class="fs-3 fw-bold text-secondary mb-0"><%= count %></p>
        <span class="fs-6 fw-light ps-2 text-muted"><%= t('global.registered', count:) %></span>
    </div>
</div>

<div class="bg-primary border border-secondary-subtle rounded-3 container">
    <div class="d-flex align-items-center">

        <div class="flex-fill">
            <%= render 'partials/search_form', loc: t('global.search_name'), path: staffs_path, frame: :staffs, size: '300px', ctrls: 'filters' do |f| %>
                <div class="row mb-2">
                    <!-- Activity Status -->
                    <div class="col">
                        <%= f.label :staff_role, t('global.staff_role'), class: 'form-label fw-semibold text-secondary' %>
                        <%= f.select :staff_role, Staff.humanize_roles, { prompt: t('global.all-m') },
                         class: 'form-select', data: { action: 'change->filters#submit' } %>
                    </div>
                </div>
            <% end %>
        </div>

        <%= link_to new_staff_path, class: 'btn btn-dark text-secondary border border-secondary-subtle ms-2' do %>
            <i class="bi text-secondary bi-person-fill-add"></i>
            <span class="ms-1"><%= t '.add_staff' %></span>
        <% end %>
    </div>

    <%= turbo_frame_tag :staffs do %>
        <% staff_sortable_column = ->(col, title) { sortable_column(col, title, staffs_path, :staffs, @sort_by, @direction) } %>
        <div id="staffs" class="table-responsive">
            <div class="rounded-3 border border-secondary-subtle overflow-hidden mb-3">
                <table class="table table-borderless table-striped mb-0">
                    <thead class="table-secondary">
                        <tr class="fs-6">
                            <th><%= staff_sortable_column.call('name' ,User.human_attribute_name('name')) %></th>
                            <th><%= staff_sortable_column.call('surname' ,User.human_attribute_name('surname')) %></th>
                            <th><%= staff_sortable_column.call('birth_day' ,User.human_attribute_name('birth_day')) %></th>
                            <th class="text-primary fw-semibold"><%= Staff.human_attribute_name('role') %></th>
                            <th class="text-primary text-end fw-semibold"><%= t 'global.table.action' %></th>
                        </tr>
                    </thead>

                    <tbody class="table-group-divider">
                        <% @staffs.each do |staff| %>
                            <tr>
                                <!-- Name -->
                                <td>
                                    <%= highlight staff.name, params.dig(:name) %>
                                </td>

                                <!-- Surname -->
                                <td>
                                    <%= highlight staff.surname, params.dig(:name) %>
                                </td>

                                <!-- Birth Day -->
                                <td>
                                    <%= l staff.birth_day %>
                                </td>

                                <!-- Role -->
                                <td>
                                    <%= staff.humanize_role %>
                                </td>

                                <!-- Action -->
                                <td class="text-end">
                                    <%= link_to staff,
                                                class: 'btn btn-info btn-sm border border-secondary-subtle',
                                                data: { turbo_frame: "_top" } do %>
                                        <i class="bi text-secondary bi-eye-fill"></i>
                                    <% end %>


                                    <%= link_to edit_staff_path(staff),
                                                class: 'btn btn-warning btn-sm border border-secondary-subtle',
                                                data: { turbo_frame: "_top" } do %>
                                        <i class="bi text-secondary bi-pencil-fill"></i>
                                    <% end %>

                                    <%= button_to staff,
                                                  class: 'btn btn-danger btn-sm border border-secondary-subtle',
                                                  method: :delete,
                                                  data: { turbo_frame: "_top", turbo_confirm: t('global.destroy_dialog') },
                                                  form: {style: 'display:inline-block;'} do %>
                                        <i class="bi text-secondary bi-trash3-fill"></i>
                                    <% end %>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>

            <%== pagy_bootstrap_nav(@pagy) %>
        </div>
    <% end %>
</div>
