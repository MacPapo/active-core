<p class="mb-b fs-3 fw-semibold text-secondary">
    <%= t '.title' %>
</p>

<div class="bg-primary border border-secondary-subtle rounded-3 container-fluid">

    <div class="py-3">
        <%= render @staff %>
    </div>

    <div class="pb-3 d-flex justify-content-end">

        <!-- Edit -->
        <%= link_to edit_staff_path(@staff), class: 'btn btn-warning me-2 fs-5 text-secondary' do %>
            <i class="bi bi-pencil-fill me-1"></i>
            <%= t('global.edit_button') %>
        <% end %>

        <!-- Destroy -->
        <%= button_to @staff,
                      class: 'btn btn-danger fs-5 text-secondary',
                      method: :delete,
                      data: { turbo_confirm: t('global.delete_dialog') } do %>
            <i class="bi bi-trash3-fill"></i>
            <%= t('global.delete_button') %>
        <% end %>
    </div>
</div>
