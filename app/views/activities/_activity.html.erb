<div class="card" id="<%= dom_id activity %>">
    <div class="card-header">
        <h1 class="card-title">
            Dettagli Attività
        </h1>
    </div>
    <div class="card-body">

        <div class="row mb-6">

            <!-- Activity name -->
            <div class="col-md-6">
                <h5 class="card-subtitle mb-2">
                    Nome attività
                </h5>
                <p class="card-text">
                    <%= activity.name %>
                </p>
            </div>

            <!-- Number of people -->
            <div class="col-md-6">
                <h5 class="card-subtitle mb-2">
                    Numero partecipanti
                </h5>
                <p class="card-text">
                    <!-- TODO calculate only active sub -->
                    <% partecipants = activity.subscriptions %>
                    <% npartecipants = activity.num_participants %>

                    <% if partecipants %>
                        <% plen = partecipants.length %>
                        <%= npartecipants == 99 ? "#{plen}" : "#{plen}/#{npartecipants}" %>
                    <% end %>
                </p>
            </div>
        </div>

        <hr/>

        <div class="row mb-6">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="mb-0">Piani per questa attività</h4>

                <%= link_to new_activity_plan_path(activity_id: activity.id), class: 'btn btn-success' do %>
                    <i class="bi bi-activity"></i> Aggiungi Piano per l'attività
                <% end %>
            </div>
            <% plans = activity.activity_plans %>
            <% if plans && plans.length > 0 %>
                <div class="container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Piano</th>
                                <th>Costo</th>
                                <th>Costo Convenzionati</th>
                                <% if current_staff.admin? %>
                                    <th>Azioni</th>
                                <% end %>
                            </tr>
                        </thead>
                        <tbody>
                            <% plans.each do |plan| %>
                                <tr>

                                    <!-- Plan -->
                                    <td>
                                        <%= plan.humanize_plan %>
                                    </td>

                                    <!-- Cost -->
                                    <td>
                                        € <%= plan.cost %>
                                    </td>

                                    <!-- Affiliated cost -->
                                    <td>
                                        <% cst = plan.affiliated_cost %>
                                        <% if cst %>
                                            € <%= cst %>
                                        <% end %>
                                    </td>

                                    <% if current_staff.admin? %>
                                        <!-- Action buttons -->
                                        <td>

                                            <%= link_to edit_activity_plan_path(plan), class: 'btn btn-warning' do %>
                                                <i class="bi bi-pencil-fill"></i>
                                            <% end %>

                                            <%= button_to activity_plan_path(plan), class: 'btn btn-danger', method: :delete, data: { turbo_confirm: "Sicuro di voler eliminare questa attività? L'operazione non è reversibile" }, form: {style: 'display:inline-block;'} do %>
                                                <i class="bi bi-trash3-fill"></i>
                                            <% end %>
                                        </td>
                                    <% end %>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            <% end %>
        </div>
    </div>

</div>
