<%= form_with(model: activity) do |form| %>
    <% if activity.errors.any? %>
        <div style="color: red">
            <h2><%= t('global.forms.messages.errors', count: activity.errors.count) %></h2>

            <ul>
                <% activity.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="row mb-3">
        <div class="col">
            <%= form.label :name, class: 'form-label' %>
            <%= form.text_field :name, class: 'form-control', autofocus: true %>
        </div>

        <div class="col">
            <%= form.label :num_participants, class: 'form-label' %>
            <%= form.number_field :num_participants, class: 'form-control' %>
        </div>
    </div>

    <div>
        <%= form.submit class: 'btn btn-success w-100' %>
    </div>
<% end %>
