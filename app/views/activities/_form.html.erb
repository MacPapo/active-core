<%= form_with(model: activity) do |form| %>
    <% if activity.errors.any? %>
        <div style="color: red">
            <h2><%= t('global.forms.messages.errors', count: activity.errors.count) %></h2>

            <ul>
                <% activity.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div>
        <%= form.label :name, style: "display: block" %>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :num_participants, style: "display: block" %>
        <%= form.number_field :num_participants %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>
