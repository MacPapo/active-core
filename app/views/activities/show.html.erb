<div class="d-flex justify-content-between align-items-center mb-3">
    <p class="mb-0 fs-3 fw-semibold text-secondary">
        <%= t('.title') %>
        <span>
            <%= @activity.name %>
        </span>
    </p>

    <div class="d-flex align-items-center">
        <% count = @plans.count %>
        <p class="fs-3 fw-bold text-secondary mb-0"><%= count %></p>
        <span class="fs-6 fw-light ps-2 text-muted"><%= t('.registered', count:) %></span>
    </div>
</div>

<div class="bg-primary border border-secondary-subtle rounded-3 container">

    <div>
        <%= render @activity %>
    </div>

    <div class="py-3 d-flex justify-content-end">

        <% if current_staff.admin? %>
            <!-- Edit -->
            <%= link_to edit_activity_path(@activity), class: 'btn btn-warning me-2 fs-5 text-secondary' do %>
                <i class="bi bi-pencil-fill me-1"></i>
                <%= t('global.edit_button') %>
            <% end %>

            <!-- Destroy -->
            <%= button_to @activity,
                          class: 'btn btn-danger fs-5 text-secondary',
                          method: :delete,
                          data: { turbo_confirm: t('global.destroy_dialog') } do %>
                <i class="bi bi-trash3-fill"></i>
                <%= t('global.destroy_button') %>
            <% end %>
        <% end %>
    </div>
</div>
