<%= form_with(model: legal_guardian) do |form| %>
    <% if legal_guardian.errors.any? %>
        <div style="color: red">
            <h2><%= t('global.forms.messages.errors', count: legal_guardian.errors.count) %></h2>
            <ul>
                <% legal_guardian.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="row mb-3">
        <div class="col">
            <%= form.label :name, class: 'form-label' %>
            <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div class="col">
            <%= form.label :surname, class: 'form-label' %>
            <%= form.text_field :surname, class: 'form-control' %>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
            <%= form.label :email, class: 'form-label' %>
            <%= form.text_field :email, class: 'form-control' %>
        </div>

        <div class="col">
            <%= form.label :phone, class: 'form-label' %>
            <%= form.text_field :phone, class: 'form-control' %>
        </div>

        <div class="col">
            <%= form.label :birth_day, class: 'form-label' %>
            <%= form.date_field :birth_day, class: 'form-control' %>
        </div>
    </div>

    <div class="actions">
        <%= form.submit class: 'btn btn-success w-100' %>
    </div>
<% end %>
