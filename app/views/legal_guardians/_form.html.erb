<%= form_with(model: legal_guardian) do |form| %>
  <% if legal_guardian.errors.any? %>
    <div style="color: red">
      <h2><%= t('global.forms.messages.errors', count: legal_guardian.errors.count) %></h2>
      <ul>
        <% legal_guardian.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :surname, style: "display: block" %>
    <%= form.text_field :surname %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone %>
  </div>

  <div>
    <%= form.label :birth_day, style: "display: block" %>
    <%= form.date_field :birth_day %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
