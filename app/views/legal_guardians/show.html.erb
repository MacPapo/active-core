<%= render 'partials/container', obj: @legal_guardian, title: t('.title') do %>
    <!-- Edit -->
    <%= link_to edit_legal_guardian_path(@legal_guardian), class: 'btn btn-warning me-2 fs-5 text-secondary' do %>
        <i class="bi bi-pencil-fill me-1"></i>
        <%= t('global.edit_button') %>
    <% end %>

    <!-- Destroy -->
    <%= button_to @legal_guardian,
                  class: 'btn btn-danger fs-5 text-secondary',
                  method: :delete,
                  data: { turbo_confirm: t('global.delete_dialog') } do %>
        <i class="bi bi-trash3-fill"></i>
        <%= t('global.delete_button') %>
    <% end %>
<% end %>
