<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nome Prodotto" %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, "Descrizione" %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :max_capacity, "Capienza Massima (lascia vuoto se illimitata)" %><br>
    <%= form.number_field :max_capacity %>
  </div>

  <div>
    <%= form.check_box :requires_medical_certificate %>
    <%= form.label :requires_medical_certificate, "Richiede certificato medico" %>
  </div>

  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>
