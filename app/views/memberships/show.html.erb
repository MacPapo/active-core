<div class="card" id="<%= dom_id @membership %>">
  <div class="card-header">
    <h1 class="card-title">
      <%= t '.title' %>
    </h1>
  </div>

  <!-- Card Body -->
  <div class="card-body">
    <%= render @membership %>
  </div>

  <!-- Card Footer -->
  <div class="card-footer bg-light">
    <div class="d-flex justify-content-end">
      <%= link_to "Edit this membership", edit_membership_path(@membership, user_id: @membership.user.id), class: 'btn btn-warning me-2' %>

      <%= button_to "Destroy this membership", @membership, class: 'btn btn-danger', method: :delete, data: { turbo_confirm: "Sicuro di voler eliminare questo utente? L'operazione non Ã¨ reversibile" } %>
    </div>
  </div>
</div>
