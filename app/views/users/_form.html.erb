<%= form_with(model: user, data: { controller: 'agecheck' }) do |form| %>
    <% if user.errors.any? %>
        <div style="color: red">
            <h2><%= t('global.forms.messages.errors', count: user.errors.count) %></h2>
            <ul>
                <% user.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="mb-3">
        <%= form.label :cf, class: 'form-label' %>
        <%= form.text_field :cf, required: true, autofocus: true, class: 'form-control' %>
    </div>

    <div class="row">
        <div class="col">
            <div class="mb-3">
                <%= form.label :name, class: 'form-label' %>
                <%= form.text_field :name, required: true, class: 'form-control' %>
            </div>
        </div>
        <div class="col">
            <div class="mb-3">
                <%= form.label :surname, class: 'form-label' %>
                <%= form.text_field :surname, required: true, class: 'form-control' %>
            </div>
        </div>
    </div>

    <div class="row form-group">
        <div class="col">
            <div class="mb-3">
                <%= form.label :birth_day, class: 'form-label' %>
                <%= form.date_field :birth_day,
                    min: 90.year.ago,
                    max: 2.year.ago,
                    class: 'form-control',
                    'data-agecheck-target' => "birthDate",
                    data: { action: "change->agecheck#checkAge" } %>
            </div>
        </div>
        <div class="col align-self-center">
            <div class="mt-3">
                <div class="form-check">
                    <%= form.check_box :affiliated, class: 'form-check-input' %>
                    <%= form.label :affiliated, class: 'form-check-label' %>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="mb-3">
                <%= form.label :email, class: 'form-label' %>
                <%= form.email_field :email, class: 'form-control' %>
            </div>
        </div>
        <div class="col">
            <div class="mb-3">
                <%= form.label :phone, class: 'form-label' %>
                <%= form.text_field :phone, class: 'form-control' %>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <%= form.label :med_cert_issue_date, class: 'form-label' %>
        <%= form.date_field :med_cert_issue_date, max: Time.zone.today, class: 'form-control' %>
    </div>

    <!-- Target del tutore legale -->
    <div id="legal-guardian-fields" class="mb-3" data-agecheck-target="guardianSection" style="display: none;">
        <h3>Dati del tutore legale</h3>
        <%= form.fields_for :legal_guardian, include_id: false do |guardian_form| %>
            <div data-controller="legalguardian">
                <div class="mb-3">
                    <%= guardian_form.label :email, 'Email tutore' %>
                    <%= guardian_form.email_field :email,
                        class: 'form-control',
                        value: @legal_guardian&.email,
                        'data-legalguardian-target' => "email",
                        data: { action: "change->legalguardian#findGuardian" } %>
                </div>
                <div class="mb-3">
                    <%= guardian_form.label :name, 'Nome tutore' %>
                    <%= guardian_form.text_field :name,
                        class: 'form-control',
                        value: @legal_guardian&.name,
                        'data-legalguardian-target' => "name"
                    %>
                </div>
                <div class="mb-3">
                    <%= guardian_form.label :surname, 'Cognome tutore' %>
                    <%= guardian_form.text_field :surname,
                        class: 'form-control',
                        value: @legal_guardian&.surname,
                        'data-legalguardian-target' => "surname"
                    %>
                </div>
                <div class="mb-3">
                    <%= guardian_form.label :phone, 'Telefono tutore' %>
                    <%= guardian_form.telephone_field :phone,
                        class: 'form-control',
                        value: @legal_guardian&.phone,
                        'data-legalguardian-target' => "phone"
                    %>
                </div>
                <div class="mb-3">
                    <%= guardian_form.label :birth_day, 'Data di nascita tutore' %>
                    <%= guardian_form.date_field :birth_day,
                        class: 'form-control',
                        value: @legal_guardian&.birth_day,
                        'data-legalguardian-target' => "birthDay"
                    %>
                </div>
            </div>
        <% end %>
    </div>

    <div class="actions">
        <%= form.submit class: 'btn btn-success w-100' %>
    </div>
<% end %>
