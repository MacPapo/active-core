<div class="card">
    <div class="card-header">
        <h1><%= t '.title' %></h1>
    </div>

    <div class="card-body">
        <%= render "form", activity_plan: @activity_plan %>
    </div>

    <div class="card-footer">
        <!-- TODO align right -->
        <%= link_to activity_path(@activity_plan.activity), class: 'btn btn-primary' do %>
            <i class="bi bi-eye-fill"></i>
        <% end %>

        <%= link_to activity_path(@activity_plan.activity), class: 'btn btn-danger' do %>
            <i class="bi bi-trash3-fill"></i>
        <% end %>
    </div>
</div>
