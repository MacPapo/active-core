<p class="mb-3 fs-3 fw-semibold text-secondary">
    <%= t '.title' %>
</p>

<div class="bg-primary border border-secondary-subtle rounded-3 container-fluid">

    <div class="py-3">
        <%= render @payment %>
    </div>

    <div class="pb-3 d-flex justify-content-end">


        <%= link_to receipt_show_path(payment_id: @payment.id, format: :pdf), class: 'btn btn-info me-2 fs-5 text-secondary' do %>
            <i class="bi bi-receipt me-1"></i>
            <%= t('global.receipt_button') %>
        <% end %>

        <% if current_staff.admin? %>
            <!-- Edit -->
            <%= link_to edit_payment_path(@payment), class: 'btn btn-warning me-2 fs-5 text-secondary' do %>
                <i class="bi bi-pencil-fill me-1"></i>
                <%= t('global.edit_button') %>
            <% end %>

            <!-- Destroy -->
            <%= button_to @payment,
                          class: 'btn btn-danger fs-5 text-secondary',
                          method: :delete,
                          data: { turbo_confirm: t('global.destroy_dialog') } do %>
                <i class="bi bi-trash3-fill"></i>
                <%= t('global.destroy_button') %>
            <% end %>
        <% end %>
    </div>
</div>
