<h3 class="card-subtitle mb-4">
  <%= t '.payment_info' %>
</h3>

<div class="row mb-4">
  <div class="col">
    <h5 class="card-subtitle mb-2">
      <%= t '.amount' %>
    </h5>
    <div class="card-text">
      <%= payment.amount %>
    </div>
  </div>
  <div class="col">
    <h5 class="card-subtitle mb-2">
      <%= t '.date' %>
    </h5>
    <div class="card-text">
      <%= l payment.date %>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col">
    <h5 class="card-subtitle mb-2">
      <%= t '.method' %>
    </h5>
    <div class="card-text">
      <%= payment.payment_method %>
    </div>
  </div>
  <div class="col">
    <h5 class="card-subtitle mb-2">
      <%= t '.payable_type' %>
    </h5>
    <div class="card-text">
      <%= payment.payable_type %>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col">
    <h5 class="card-subtitle mb-2">
      <%= t '.entry_type' %>
    </h5>
    <div class="card-text">
      <%= payment.entry_type %>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col">
    <h5 class="card-subtitle mb-2">
      <%= t '.note' %>
    </h5>
    <div class="card-text">
      <%= payment.note %>
    </div>
  </div>
</div>

<hr/>

<div class="row mb-4">
  <% staff = payment.staff %>
  <div class="col">
    <h5 class="card-subtitle mb-4">
      <%= t '.staff' %>
    </h5>
    <div class="list-group">
      <%= link_to "#{staff.full_name}",  staff, class: 'list-group-item list-group-item-action' %>
      </div>
  </div>
</div>
